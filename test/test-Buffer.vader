Execute (Buffer: Gave $ Start, Non-Dollar End):
  call g:buffer.SetBuffer(bufnr('%'))
  let g:lines = [
    \ 'foo1',
    \ 'foo2',
    \ 'foo3',
  \ ]
  AssertThrows call g:buffer.ReplaceLines('$', 3, g:lines)
  AssertNotEqual -1, match(g:vader_exception, 'ERROR(BadValue)'),
      \ 'Threw wrong exception: '.g:vader_exception
  AssertThrows call g:buffer.ReplaceLines('$', 0, g:lines)
  AssertNotEqual -1, match(g:vader_exception, 'ERROR(BadValue)'),
      \ 'Threw wrong exception: '.g:vader_exception

