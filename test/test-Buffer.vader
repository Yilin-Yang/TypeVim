Execute (Buffer: Cleanup):
  let g:tabnr = tabpagenr('$')
  while g:tabnr ># 2
    execute 'tabnext ' . g:tabnr
    if bufname('%') ==# ''
      tabclose
    endif
    let g:tabnr -= 1
  endwhile
  call g:buffer.CleanUp()
